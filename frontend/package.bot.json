{
  "name": "claude-code-github-bot",
  "version": "1.0.0",
  "description": "GitHub bot that executes code changes using Claude Code SDK",
  "main": "dist/index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist --target bun",
    "start": "bun run index.js",
    "dev": "bun run --watch index.ts",
    "tsc": "bunx tsc --noEmit",
    "lint": "bunx prettier --write . --cache | { grep -v '(unchanged)' || true; } && bunx eslint . --cache",
    "test": "bun test"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.44",
    "@octokit/rest": "^22.0.0",
    "@octokit/types": "^14.1.0",
    "dotenv": "^17.1.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.12",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "bun-types": "^1.2.18",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "jest": "^30.0.4",
    "prettier": "^3.6.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}
